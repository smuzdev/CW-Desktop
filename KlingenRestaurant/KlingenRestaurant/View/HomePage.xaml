<Page x:Class="KlingenRestaurant.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KlingenRestaurant.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage"
      DataContext="{Binding Path=HomeViewModel, Source={StaticResource Locator}}">

    <Grid>
        <TextBlock Text="{Binding HomePageText}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"/>
    </Grid>
</Page>
