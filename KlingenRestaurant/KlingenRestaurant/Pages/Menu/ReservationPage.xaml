<Page x:Class="KlingenRestaurant.ReservationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KlingenRestaurant"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReservationPage"
      DataContext="{Binding Path=ReservationViewModel, Source={StaticResource Locator}}">

    <Grid>
        <TextBlock Text="{Binding ReservationPageText}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"/>
    </Grid>
</Page>
